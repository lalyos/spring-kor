<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


  <bean id="personRepository" class="com.github.lalyos.kore.FixedPersonRepository" />
  <bean id="greetingService" class="com.github.lalyos.kore.SimpleGreetingService" />

  <bean class="com.github.lalyos.kore.GreetingApp">
    <property name="greetingService">
      <ref bean="greetingService"/>
    </property>
    <property name="personRepository">
      <ref bean="personRepository"/>
    </property>
  </bean>
</beans>
