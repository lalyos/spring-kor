<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
  default-autowire="byType">


  <bean id="personRepository" class="com.github.lalyos.kore.FixedPersonRepository" />
  <bean id="_greetingService" class="com.github.lalyos.kore.SimpleGreetingService" autowire-candidate="false">
    <constructor-arg value="Welcome" />
  </bean>
  
  <bean class="com.github.lalyos.kore.I18NGreetingService" 
  p:messageKey="msg.welcome" p:locale="en"/>

  <bean class="com.github.lalyos.kore.GreetingApp" />
  
  <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
  p:basename="messages"/>
</beans>
